<UserControl x:Class="Salon.UserControls.ServiceBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Salon.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <StackPanel Background="WhiteSmoke" Margin="10">
        <Border Width="250" Height="150" BorderBrush="Gray" BorderThickness="0.5">
            <StackPanel>
                <TextBlock x:Name="TitleBox" Margin="5" Text="Title" FontSize="25" HorizontalAlignment="Center"/>
                <ComboBox x:Name="MasterComboBox" Margin="5" Height="50"/>
                <Button x:Name="AddButon" Margin="5" FontSize="25" Content="Добавить" Click="AddButon_Click"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
