<Window x:Class="SalonApp.View.ActiveEmployees.ActiveEmployeesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalonApp.View.ActiveEmployees"
        mc:Ignorable="d"
        Title="ActiveEmployeesWindow" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>

        <DataGrid AutoGenerateColumns="False" SelectedItem="{Binding Path=SelectedEmployee}" ItemsSource="{Binding Path=Employees}" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding Path=FullName}"/>
                <DataGridTextColumn Header="Должность" Binding="{Binding Path=Rank.RankName}"/>
                <DataGridCheckBoxColumn CanUserReorder="False" Header="Активен?" Binding="{Binding Path=IsActive}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Border Grid.Column="1" Margin="5" BorderBrush="Gray" BorderThickness="0.5">
            <StackPanel Margin="5">
                <Button Command="{Binding Path=SetActivEmployeeCommand}" Content="Актив/Деактив мастера" Margin="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
