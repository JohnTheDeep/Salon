<Window x:Class="SalonApp.View.passa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalonApp.View"
        mc:Ignorable="d"
        Title="Админ панель" Height="200" Width="200">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="5" Grid.Column="1">
            <TextBlock Text="Пароль" Margin="2" TextAlignment="Center" FontSize="15"/>
            <TextBox Text="{Binding Path=Password}"/>
            <Button Command="{Binding Path=Show}" Content="Войти" Margin="2"/>
        </StackPanel>
    </Grid>
</Window>
