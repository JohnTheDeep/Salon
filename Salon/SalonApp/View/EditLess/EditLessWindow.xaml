<Window x:Class="SalonApp.View.EditLess.EditLessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalonApp.View.EditLess"
        mc:Ignorable="d" Background="#E7ECEF" TextBlock.FontFamily="bahnschrift"
        Title="Редактировать расход" Height="200" Width="250">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1" Margin="5" Background="White" CornerRadius="5">
            <StackPanel Margin="5">
                <TextBlock FontSize="15" Text="Наименование" HorizontalAlignment="Center"/>
                <TextBox Text="{Binding Path=SelectedLess.Name}" Margin="2" />
                <TextBlock FontSize="15" Text="Cумма" HorizontalAlignment="Center"/>
                <TextBox Text="{Binding Path=SelectedLess.Amount}" Margin="2" />
                <Button Command="{Binding Path=Save}" Content="Добавить" Margin="2"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
