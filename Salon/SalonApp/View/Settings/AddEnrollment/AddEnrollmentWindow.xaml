<Window x:Class="SalonApp.View.Settings.AddEnrollment.AddEnrollmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalonApp.View.Settings.AddEnrollment"
        mc:Ignorable="d"
        Title="AddEnrollmentWindow" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Gray"   BorderThickness="0.5" Margin="5" Grid.Column="1">
            <Grid>
                <DataGrid AutoGenerateColumns="False" SelectedItem="{Binding Path=SelectedService}"  Margin="5,5,5,45" ItemsSource="{Binding Path=ServicesList}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Услуга" Binding="{Binding Path=ServiceName}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Command="{Binding Path=Add}" Content="Добавить" Margin="5" VerticalAlignment="Bottom" FontSize="17" />
            </Grid>
        </Border>
    </Grid>
</Window>
