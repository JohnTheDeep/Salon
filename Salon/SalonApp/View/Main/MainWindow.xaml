    <Window.Resources>
        <Style TargetType="{x:Type TabItem}">


            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#f2f2f2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Bahnscrift"/>
            <Setter Property="Template">

                <Setter.Value>

                    <ControlTemplate TargetType="TabItem">

                        <Grid Name="Panel">
                            <ContentPresenter x:Name="ContentSite"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    ContentSource="Header"
                                    Margin="10,10,10,10"/>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Panel" Property="Background" Value="#6096BA" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Panel" Property="Background" Value="#274C77" />
                                <Setter Property="BorderBrush" Value="Black"/>
                                <Setter Property="BorderThickness" Value="0 0.5 0 0 "/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Panel" Property="Background" Value="#274C77" />
                                <Setter TargetName="Panel" Property="TextBlock.Foreground" Value="Gray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>

            </Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <Brush>Transparent</Brush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type TabControl}"/>
        <ResourceDictionary x:Key="sys" Source="Dictionary1.xaml"/>
        <Style x:Name="StandartListView" TargetType="{x:Type ListViewItem}">
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <Brush>SkyBlue</Brush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness">
                <Setter.Value>
                    <Thickness>0.5</Thickness>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness>2</Thickness>
                </Setter.Value>
            </Setter>
            <Setter Property="Width">
                <Setter.Value>
                    <System:Double>300</System:Double>
                </Setter.Value>
            </Setter>
            <Setter Property="Height">
                <Setter.Value>
                    <System:Double>200</System:Double>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalContentAlignment">
                <Setter.Value>
                    <HorizontalAlignment>Center</HorizontalAlignment>
                </Setter.Value>
            </Setter>
            <Setter Property="VerticalContentAlignment">
                <Setter.Value>
                    <VerticalAlignment>Center</VerticalAlignment>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

