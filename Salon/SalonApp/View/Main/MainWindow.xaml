                                            <TextBlock Foreground="Black" FontSize="25" TextAlignment="Center" Margin="5" Text="/" HorizontalAlignment="Stretch" Height="40"/>
                                            <TextBlock Foreground="Black" FontSize="25" TextAlignment="Center" Margin="5" Text="{Binding CurrentIncomming}" HorizontalAlignment="Stretch" Height="40"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <Border Background="White" CornerRadius="5" Margin="3,3,3,3" HorizontalAlignment="Center" Width="220" BorderThickness="2" VerticalAlignment="Center" >
                                <StackPanel VerticalAlignment="Bottom" Margin="5" Width="210">
                                    <TextBlock Foreground="Black" TextAlignment="Center" Margin="5" Text="Итого безнал"/>
                                    <StackPanel Height="50">
                                        <TextBlock Foreground="Black" FontSize="25" TextAlignment="Center" Margin="5" Text="{Binding CurrentCashBox.amountNonCash}" HorizontalAlignment="Stretch" Height="40"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <Border Background="White" CornerRadius="5" Margin="3,3,3,3" HorizontalAlignment="Center" Width="220"  BorderThickness="2" VerticalAlignment="Center">
                                <StackPanel Margin="5" Width="210">
                                    <TextBlock Foreground="Black" TextAlignment="Center" Margin="5" Text="Итого переводов"/>
                                    <StackPanel Height="50">
                                        <TextBlock Foreground="Black" FontSize="25" TextAlignment="Center" Margin="5" Text="{Binding CurrentCashBox.amountTransfers}" HorizontalAlignment="Stretch" Height="40"/>
                                    </StackPanel>

                                </StackPanel>
                            </Border>
                        </DockPanel>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                            <Button Command="{Binding Path=OpenCash}" Width="150" Margin="5" FontSize="15" Content="Забрать"/>
                            <Button Command="{Binding Path=DeleteCash}" Width="150" Margin="5" FontSize="15" Content="Удалить"/>
                            <Button Command="{Binding Path=IncommingCommand}" Width="150" Margin="5" FontSize="15" Content="Доход"/>
                        </StackPanel>
                    </StackPanel>
                    <Border Background="White" CornerRadius="5" VerticalAlignment="Top" Height="40"  Grid.Column="0" Margin="5,10,5,10" Grid.Row="1">
                        <Grid Background="Transparent">
                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" HorizontalAlignment="Left" Width="100" Margin="5" Foreground="Black" Text="История" FontSize="17"/>
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Период" Foreground="Black" Height="25" TextAlignment="Center"  Margin="5,5,265,5"/>
                            <DatePicker  SelectedDate="{Binding Path=CashSelectedDate}"  HorizontalAlignment="Right"   VerticalAlignment="Top" Width="250" Margin="5,5,5,5">
                                <DatePicker.Resources>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="Control.Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <TextBox IsEnabled="False" Text="{Binding Path=SelectedDate, StringFormat='MM/yyyy', RelativeSource={RelativeSource AncestorType=DatePicker}}" />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>

                        </Grid>

                    </Border>
                    <Border Background="White" CornerRadius="5" Grid.Row="1" Grid.Column="0" Margin="5,60,5,5">
                        <DataGrid Margin="10" SelectedItem="{Binding Path=SelectedCash}" ItemsSource="{Binding Path=CashBoxOperationsList}"  Grid.Row="1" Grid.Column="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="*" Header="Дата" Binding="{Binding Path=Date}"/>
                                <DataGridTextColumn Width="*" Header="Забрано" Binding="{Binding Path=Taken}"/>
                                <DataGridTextColumn Width="*" Header="Нал\Безнал" Binding="{Binding Path=Type}"/>
                                <DataGridTextColumn Width="*" Header="На начало дня" Binding="{Binding Path=LessIn}"/>
                                <DataGridTextColumn Width="*" Header="После забора" Binding="{Binding Path=Less}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                </Grid>
            </TabItem>
            <TabItem TextBlock.FontFamily="bahnschrift" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <svgc:SvgViewbox Margin="0,0,5,0" Width="15" Height="15"  Source="/src/icons/minus.svg"/>
                        <TextBlock Margin="10,0,0,0" VerticalAlignment="Bottom" Text="АВАНСЫ/МИНУСЫ"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <TabControl BorderThickness="0" Background="#E7ECEF" TabStripPlacement="Left" Grid.Column="0" Grid.Row="1">
                        <TabControl.Resources>
                            <Style TargetType="{x:Type Grid}">
                                <Setter Property="Background" Value="#274C77"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </TabControl.Resources>
                        <TabItem TextBlock.FontFamily="bahnschrift"  Margin="0" Header="Минусы">
                            <Grid Margin="10" Background="#E7ECEF">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="300*"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition/>

                                </Grid.RowDefinitions>
                                <Border Background="White" CornerRadius="5" Margin="10,5,10,5">
                                    <Grid  Background="Transparent" >
                                        <TextBlock VerticalAlignment="Center" TextAlignment="Left" HorizontalAlignment="Left" Width="100" Margin="5" Foreground="Black" Text="Расходы" FontSize="17"/>
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Период" Foreground="Black" Height="25" TextAlignment="Center"  Margin="5,5,265,5"/>
                                        <DatePicker  SelectedDate="{Binding Path=MinusSelectedDate}"  HorizontalAlignment="Right"  Height="30" VerticalAlignment="Top" Width="250" Margin="5,5,5,5">
                                            <DatePicker.Resources>
                                                <Style TargetType="DatePickerTextBox">
                                                    <Setter Property="Control.Template">
                                                        <Setter.Value>
                                                            <ControlTemplate>
                                                                <TextBox IsEnabled="False" Text="{Binding Path=SelectedDate, StringFormat='MM/yyyy', RelativeSource={RelativeSource AncestorType=DatePicker}}" />
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </DatePicker.Resources>
                                            <i:Interaction.Triggers>
                                                <b:EventTrigger EventName="SelectedDateChanged">
                                                    <b:InvokeCommandAction Command="{Binding Path=MinusDateChanged}"/>
                                                </b:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </DatePicker>

                                    </Grid>

                                </Border>
                                <Border Margin="10" Background="White" CornerRadius="5" Grid.Column="0" Grid.Row="1">
                                    <DataGrid SelectedItem="{Binding Path=SelectedLess}" ItemsSource="{Binding Path=LessesList}" Margin="10">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Binding="{Binding Path=Duty.DutyDate}" Width="*" Header="Дата"/>
                                            <DataGridTextColumn Binding="{Binding Path=Name}" Width="*" Header="Наименование"/>
                                            <DataGridTextColumn Binding="{Binding Path=Amount}" Width="*" Header="Сумма"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                                <Border  CornerRadius="5" Grid.Row="1" Grid.Column="1" Background="White" Margin="5,10,10,10">
                                    <StackPanel Margin="5">
                                        <Button   Command="{Binding Path=AddLess}" Content="Добавить" Margin="2"/>
                                        <Button  Visibility="{Binding IsVis}" Command="{Binding Path=EditLess}" Content="Редактировать" Margin="2">
                                        </Button>
                                    </StackPanel>

                                </Border>
                            </Grid>
                        </TabItem>
                        <TabItem TextBlock.FontFamily="bahnschrift" Background="{Binding Path=Back}"  Header="Авансы">
                            <Grid Background="#E7ECEF" Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="300*"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Border Background="White" CornerRadius="5" Margin="10,5,10,5">

                                    <Grid Background="Transparent" VerticalAlignment="Top">
                                        <TextBlock VerticalAlignment="Center" TextAlignment="Left" HorizontalAlignment="Left" Width="100" Margin="5" Foreground="Black" Text="Авансы" FontSize="17"/>
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Период" Foreground="Black" Height="25" TextAlignment="Center"  Margin="5,5,265,5"/>
                                        <DatePicker  SelectedDate="{Binding Path=AvSelectedDate}"  HorizontalAlignment="Right"  Height="30" VerticalAlignment="Top" Width="250" Margin="5,5,5,5">
                                            <DatePicker.Resources>
                                                <Style TargetType="DatePickerTextBox">
                                                    <Setter Property="Control.Template">
                                                        <Setter.Value>
                                                            <ControlTemplate>
                                                                <TextBox IsEnabled="False" Text="{Binding Path=SelectedDate, StringFormat='MM/yyyy', RelativeSource={RelativeSource AncestorType=DatePicker}}" />
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </DatePicker.Resources>
                                            <i:Interaction.Triggers>
                                                <b:EventTrigger EventName="SelectedDateChanged">
                                                    <b:InvokeCommandAction Command="{Binding Path=MinusDateChanged}"/>
                                                </b:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </DatePicker>

                                    </Grid>
                                </Border>
                                <Border Margin="10" Background="White" CornerRadius="5" Grid.Column="0" Grid.Row="1">
                                    <DataGrid   SelectedItem="{Binding Path=SelectedAvac}" ItemsSource="{Binding Path=ListA}" Margin="10">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Binding="{Binding Path=WhenString}" Width="*" Header="Дата"/>
                                            <DataGridTextColumn Binding="{Binding Path=Employee.FullName}" Width="*" Header="Сотрудник"/>
                                            <DataGridTextColumn Binding="{Binding Path=Total}" Width="*" Header="Аванс"/>
                                            <DataGridTextColumn Binding="{Binding Path=Fine}" Width="*" Header="Штраф"/>
                                            <DataGridTextColumn Binding="{Binding Path=DateIn}" Width="*" Header="С"/>
                                            <DataGridTextColumn Binding="{Binding Path=DateOut}" Width="*" Header="ПО"/>

                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                                <Border  CornerRadius="5" Grid.Row="1" Grid.Column="1" Background="White" Margin="5,10,10,10">
                                    <StackPanel Margin="5">
                                        <Button Command="{Binding Path=AddAv}" Content="Добавить" Margin="2"/>
                                        <Button Visibility="{Binding Path=IsVis}" Command="{Binding Path=EditAvac}" Content="Редактировать" Margin="2"/>

                                        <Button Visibility="{Binding Path=IsVis}" Command="{Binding Path=DeleteAvac}" Content="Удалить" Margin="2"/>

                                    </StackPanel>
                                </Border>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>

            </TabItem>
        </TabControl>
        <Grid HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Background="Silver" Opacity="0.7" Visibility="{Binding Path=IsVisibility}">
            <fa:ImageAwesome Opacity="1" VerticalAlignment="Center" HorizontalAlignment="Center" Icon="Refresh" Visibility="{Binding Path=IsVisibility}" Spin="{Binding Path=IsVisible}" Height="48" Width="48" />
            <TextBlock Text="Идет загрузка" Visibility="{Binding Path=IsVisibility}" FontSize="17" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,100,0,0"/>
        </Grid>
    </Grid>
</Window>
